<root main_tree_to_execute="MoveRobotAndArm">
  <Blackboard>
    <!-- Define vetor padrão de posições do braço com zeros -->
    <Array name="arm_joint_values">0 0 0 0 0 0 0 0</Array>
  </Blackboard>

  <BehaviorTree ID="MoveRobotAndArm">
    <Sequence name="MainSequence">

      <WaitForOrder target_pose="{nav_goal}" />

      <NavigateToPose goal="{nav_goal}" />

      <MoveJoints joint_values="{arm_joint_values}" />

    </Sequence>
  </BehaviorTree>
</root>

